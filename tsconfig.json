{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@contracts/*": ["./typechain-types/*"],
      "@contracts": ["./typechain-types"]
    }
  },
  "include": ["./scripts/**/*", "./test/**/*", "./typechain-types/**/*"],
  "files": ["./hardhat.config.ts"]
}
